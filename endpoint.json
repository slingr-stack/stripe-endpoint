{
    "label": "Stripe",
    "name": "stripe",
    "apiVersion": "v1",
    "internal": false,
    "configurationType": "GLOBAL",
    "deployment": {
        "profiles":[
            {
                "name": "default",
                "label": "Default",
                "memory": 256,
                "description": "Default configuration"
            }
        ],
        "allowMultipleInstances": true
    },
    "icon48": "https://storage.googleapis.com/static.slingrs.io/platform/endpoints/stripe.png",
    "status": "ACTIVE",
    "stores": [],
    "events": [
        {
            "label": "Webhook",
            "name": "webhook",
            "description": "Happens when a Stripe hits the endpoint URL."
        }
    ],
    "functions": [
        {
            "label": "GET",
            "name": "_get"
        },
        {
            "label": "POST",
            "name": "_post"
        },
        {
            "label": "PATCH",
            "name": "_patch"
        },
        {
            "label": "PUT",
            "name": "_put"
        },
        {
            "label": "DELETE",
            "name": "_delete"
        }
    ],
    "scripts":[
        "functions.js"
    ],
    "flowSteps": [
        "apiCallStripe"
    ],
    "configuration":[
        {
            "label": "Publishable key",
            "name": "publishableKey",
            "type": "text",
            "required": true
        },
        {
            "label": "Secret key",
            "name": "secretKey",
            "type": "password",
            "required": true
        },
        {
            "name": "webhook",
            "label": "Webhook URL",
            "type": "label",
            "value": "@config.WEBHOOK_URL"
        },
        {
            "label": "Check webhooks sign",
            "name": "checkWebhooksSign",
            "type": "toggle",
            "defaultValue": false
        },
        {
            "label": "Webhooks secret",
            "name": "webhooksSecret",
            "type": "password",
            "required": "config.checkWebhooksSign==true"
        },
        {
            "label": "Max Concurrent Calls",
            "name": "maxConcurrentCalls",
            "type": "text",
            "required": true,
            "defaultValue": "3",
            "typeOptions": {
                "validation": "number"
            }
        },
        {
            "label": "Max Retries",
            "name": "maxRetries",
            "type": "text",
            "required": true,
            "defaultValue": "6",
            "typeOptions": {
                "validation": "number"
            }
        }
    ]
}
